{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "docker compose build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "./.pipeline/publish.sh",
            "dependsOn": "build",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "docker compose up -d"
        }
    ]
}
