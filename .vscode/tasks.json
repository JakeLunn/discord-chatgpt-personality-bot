{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./pipeline/docker-build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "./pipeline/docker-publish.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./pipeline/docker-run.sh",
        }
    ]
}